<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp150"
        android:layout_margin="@dimen/dp5"
        card_view:cardCornerRadius="@dimen/dp2"
        card_view:contentPadding="@dimen/dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/title_list"
                android:textStyle="bold"
                android:textSize="@dimen/sp20"
                android:id="@+id/title"
                android:textColor="@color/title_color_list"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="@string/type_list"
                android:id="@+id/type"
                android:textColor="@color/color_type_list"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="@string/date_list"
                android:id="@+id/date"
                android:textColor="@color/color_type_list"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                tools:text="@string/author_list"
                android:id="@+id/author"
                android:textColor="@color/author_color_list"
                android:gravity="right"
                android:paddingRight="@dimen/dp10"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>












</LinearLayout>